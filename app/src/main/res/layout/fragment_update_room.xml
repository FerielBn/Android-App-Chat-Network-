<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8591F6"
    tools:context=".UpdateRoomFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Update Room"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="34sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp">

            <ImageView
                android:id="@+id/AddImgBtn"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/ajouter_une_image" />
        </LinearLayout>

        <EditText
            android:id="@+id/room_name"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:backgroundTint="@android:color/white"
            android:ems="10"
            android:hint="Room Name"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/room_key"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:backgroundTint="@android:color/white"
            android:ems="10"
            android:hint="Room Secret Key"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="25dp" />

        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:weightSum="2"
            android:layout_marginTop="40dp">

            <Spinner
                android:id="@+id/category_select"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="@android:color/white"
                android:spinnerMode="dialog"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="30dp"
                android:weightSum="1" />

            <Spinner
                android:id="@+id/accessibility_select"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="@android:color/white"
                android:spinnerMode="dialog"
                android:textAlignment="center"
                android:textColor="#FFFFFF"


                android:textSize="30dp"
                android:weightSum="1" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:weightSum="2">


                <Button
                    android:id="@+id/CancelPrivBtn"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="Cancel"
                    android:background="@drawable/btn_bg_outline"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="16dp"/>

                <Button
                    android:id="@+id/JoinPrivRoomBtn"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="Update"
                    android:background="@drawable/btn_bg"
                    android:textStyle="bold"
                    android:textColor="@color/lavender"
                    android:textSize="16dp"/>
            </LinearLayout>
    </LinearLayout>

</RelativeLayout>